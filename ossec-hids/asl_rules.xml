  <rule id="60800" level="0">
    <decoded_as>denyhosts</decoded_as>
    <description>Grouping for the Denyhosts rules.</description>
  </rule>

  <rule id="60801" level="7">
    <if_sid>60800</if_sid>
    <match>Added</match>
